{{# if products}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
            {{# each products }}
                <li class="list-group-item">
                    <span class="badge"> {{this.qty}}</span>
                    <strong>{{this.item.title}}</strong>
                    <span class="label label-success"> £{{ this.price }}</span>
                    <class class="btn-group">
                        <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            Button with data-target
                        </button>
                        <ul class="dropdown-menu" id="collapseExample">
                            <li><a  href="#">Reduce by 1</a></li>
                            <li><a  href="#">Remove All</a></li>
                        </ul>
                    </class>
                </li>
            {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total: £{{totalPrice}}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" class="btn btn-success" type="button">Checkout</a>
        </div>
    </div>
{{ else }}
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No items in cart</h2>
    </div>
{{/if}}