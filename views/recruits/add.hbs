
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Add new Candidate</h1>

        <form action="/pa-recruitment/addCandidate" method="post">
            <div class="form-group">
                <label>First name</label>
                <input type="text" name="firstname" class="form-control">
            </div>
            <div class="form-group">
                <label>Last name</label>
                <input type="text" name="lastname" class="form-control">
            </div>
            <div class="form-group">
                <label>Anticipated rank</label>
                <input name="rank" class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label" for="date">Interview Date</label>
                <input type="text" name="interviewdate" id="datepicker" class="form-control" >
            </div>

            <div class="form-group">
                <label for="textarea">Key technologies and skills</label>
                <textarea class="form-control" name="keyskills" id="keyskills" rows="4"></textarea>
            </div>

            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button type="submit" class="btn btn-primary">Add candidate</button>
        </form>
    </div>
</div>

<script>
$( function() {
    $( "#datepicker" ).datepicker();
} );
</script>
